{
  "name": "@csark0812/zustand-getters",
  "version": "1.0.4",
  "description": "A Zustand middleware that makes regular JavaScript object getters reactive",
  "author": "Christopher Sarkissian",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun run build && bun run test.ts",
    "example": "cd example && bun run dev",
    "lint": "eslint . --fix",
    "format": "prettier . --write"
  },
  "peerDependencies": {
    "zustand": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "react": "^19.2.3",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.0.0",
    "zustand": "^5.0.0"
  },
  "keywords": [
    "zustand",
    "middleware",
    "state",
    "getters",
    "reactive",
    "derived-state",
    "computed",
    "react",
    "state-management",
    "javascript-getters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csark0812/zustand-getters.git"
  },
  "bugs": {
    "url": "https://github.com/csark0812/zustand-getters/issues"
  },
  "homepage": "https://github.com/csark0812/zustand-getters#readme",
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
